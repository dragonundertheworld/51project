ORG 0000H
MAIN:
MOV R1,#5;改变低电平时间
MOV P1,#10000000B
ACALL DELAY500US
MOV P1,#00000000B
ACALL DELAY
AJMP MAIN

DELAY500US:			;@11.0592MHz
	NOP
	PUSH 30H
	PUSH 31H
	MOV 30H,#5
	MOV 31H,#72
NEXT:
	DJNZ 31H,NEXT
	DJNZ 30H,NEXT
	POP 31H
	POP 30H
	RET
	
DELAY:			;@11.0592MHz	
	PUSH 30H
	MOV 30H,#218
NEXT1:
	DJNZ 30H,NEXT1
	POP 30H
	DJNZ R1,DELAY
	RET
	END
